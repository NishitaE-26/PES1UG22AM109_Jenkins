pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Compile hello.cpp
                sh 'g++ -o output hello.cpp'
            }
        }

        stage('Test') {
            steps {
                // Execute the compiled output
                sh './output'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deployment stage (not actually deploying anything in this example)'
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed'
        }
    }
}
